{
  "manifest_version": 2,
  "name": "Custom Emoji Extension",
  "version": "1.0",

  "description": "Add and view your own custom emojis across webpages",
  "icons": {
    "128": "icon.png"
  },

  "browser_action": {
    "default_title": "Add an emoji!",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "background": {
    "scripts": ["event.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ]
}
